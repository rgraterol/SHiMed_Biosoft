<h1>Directorio de Aseguradoras</h1>

<table class="table table-striped table-bordered table-condensed">
  <tbody>
  <tr>
    <td><b>Nombre Empresa Aseguradora</b></td>
    <td><b>RIF</b></td>
    <td><b>Telefono</b></td>
    <td><b>Dirección</b></td>
    <td><b>Página Web</b></td>
  </tr>
  <% @aseguradoras.each do |aseguradora| %>
      <tr>
        <td><%= link_to aseguradora.nombre, aseguradora, :class => 'h4' %></td>
        <td><%= aseguradora.rif %></td>
        <td><%= aseguradora.telefono %></td>
        <td><%= truncate(strip_tags(aseguradora.direccion), length: 100) %></td>
        <td><a href="<%= aseguradora.url %>"><%= aseguradora.url %></a></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

