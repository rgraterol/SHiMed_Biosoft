<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Registro de nuevo usuario</h1>
    <div class="form-group">
      <%= f.label :email, :class=>"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, :class=>"form-control", :placeholder =>"Email" %><br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Contraseña", :class=>"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, :class=>"form-control", :placeholder =>"Contraseña" %><br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Confirmar Contraseña", :class=>"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, :class=>"form-control", :placeholder =>"Confirmar Contraseña" %><br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tipo_actor, :class=>"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :tipo_actor, options_for_select([["Paciente", "paciente"], ["Médico","medico"], ["Centro de Salud","centrosalud"], ["Aseguradora","aseguradora"], ["Farmacia","farmacia"],["Centro de Examenes", "centroexamenes"]]) %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <br> <%= f.submit 'Registrarse', :class=>"btn btn-default"%>
      </div>
    </div>
<% end %>
